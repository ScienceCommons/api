gem 'rack-oauth2'
gem 'oauth2'
gem 'redis', '~> 3.1.0'
gem 'resque'
gem 'resque-retry'
gem 'resque-pool'
gem 'dotenv-rails'
gem "statsd-ruby"
gem 'puma'
gem "sentry-raven", :git => "https://github.com/getsentry/raven-ruby.git"
